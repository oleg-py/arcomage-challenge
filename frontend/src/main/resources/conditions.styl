.rc-tabs-top .rc-tabs-tab {
  margin-right: 0 !important
}

.quick-presets-select
  label
    display: flex
    align-items: flex-start
    margin: 8px 0
  dl
    padding-left: 8px
    margin: 0
  dd
    font-size: small
    margin-left: 8px

.taverns
  display: flex
  flex-direction: column
  align-items: center
  p
    margin-top: 8px

.box.wide
  & > .rc-tabs
    margin: 0 16px

.tavern-select
  width: 180px
  font-size: 16px
  border: 1px solid #bfbfbf
  height: 34px
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  background-color: #eee
  text-align: center
  &:hover
    background-color: whitesmoke