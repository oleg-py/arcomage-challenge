}

.quick-presets-select
  label
    display: flex
    align-items: flex-start
    margin: 8px 0
  dl
    padding-left: 8px
    margin: 0
  dd
    font-size: small
    margin-left: 8px

.taverns
  display: flex
  flex-direction: column
  align-items: center
  p
    margin-top: 8px

.box.wide
