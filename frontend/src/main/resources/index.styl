@import url('https://fonts.googleapis.com/css?family=PT+Sans:400,700|Ubuntu:400,700&subset=cyrillic');

@require "./components/button.styl"
@require "./components/player-box.styl"
@require "./game-page.styl"
@require "./conditions.styl"

body
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  background: whitesmoke
  vertical-align: middle
  background-image: url("./ac-background.jpg")
  background-position: center top
  background-size: cover
  width: 100vw
  height: 100vh


button, input
  font-family: 'Ubuntu', sans-serif

*
  box-sizing: border-box

.box
  margin: auto
  max-width: 500px
  background: white
  position: relative
  top: 50vh
  transform: translateY(-50%)
  box-shadow: 0 0 12px gray
  border-radius: 4px
  padding: 16px
  display: flex
  justify-content: space-between
  &.down
    flex-direction: column
  &.wide
    max-width: 780px

  .avatar-display
    box-sizing: content-box
    width: 128px
    height: 128px
    background-color: white
    border: 1px solid lightgray

  .input-container
    padding: 0 0 0 12px
    flex-grow: 2
    display: flex
    flex-direction: column
    justify-content: space-between
    > *
      margin: 0 0 8px 0

    label div
      padding-left: 2px
      font-size: 10pt
      margin-bottom: 4px

    input
      width: 100%
      border: 1px solid lightgray
      border-radius: 4px
      padding: 8px
      font-size: 12pt

    .ant-input-group-addon
      padding: 0
      border: 0
      button
        width: 100%
        border-top-left-radius: 0
        border-bottom-left-radius: 0

.endgame-notice
  z-index: 200
  position: absolute
  width: 100vw
  height: 100vh
  background: hsla(0, 0%, 80%, .6)
  top: 0
  left: 0
  display: flex
  align-items: center
  justify-content: center
  .notice-box
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    background: white
    padding: 16px 32px
    border-radius: 4px
    box-shadow: 0 0 12px black
  h1
    font-size: 72px
    margin 0 0 12px 0

.field
  width: 100vw
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.spinner-container
  width: 100vw
  height: 100vh
  display: flex
  justify-content: center
  align-items: center

.error-dialog
  border: 1px solid indianred
  background-color: lighten(indianred, 75%)
