@require "./components/button.styl"
@require "./components/player-box.styl"
@require "./game-page.styl"

body
  margin: 0
  padding: 0
  font-family: sans-serif
  background: whitesmoke
  vertical-align: middle
  background-image: url("./ac-background.jpg")
  background-position: center top
  background-size: cover
  width: 100vw
  height: 100vh

*
  box-sizing: border-box

.box
  margin: auto
  max-width: 500px
  background: white
  position: relative
  top: 50vh
  transform: translateY(-50%)
  box-shadow: 0 0 12px gray
  border-radius: 4px
  padding: 16px
  display: flex
  justify-content: space-between
  &.down
    flex-direction: column
  &.wide
    max-width: 720px

  .avatar-display
    box-sizing: content-box
    width: 128px
    height: 128px
    background-color: white
    border: 1px solid lightgray

  .input-container
    padding: 0 0 0 12px
    flex-grow: 2
    display: flex
    flex-direction: column
    justify-content: space-between
    > *
      margin: 0 0 8px 0

    label div
      padding-left: 2px
      font-size: 10pt
      margin-bottom: 4px

    input
      width: 100%
      border: 1px solid lightgray
      border-radius: 4px
      padding: 8px
      font-size: 12pt

.endgame-notice
  position: absolute
  width: 100vw
  height: 100vh
  background: hsla(0, 0%, 80%, .6)
  top: 0
  left: 0
  font-size: 72px
  text-align: center

.field
  width: 100vw
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.spinner-container
  width: 100vw
  height: 100vh
  display: flex
  justify-content: center
  align-items: center

.error-dialog
  border: 1px solid indianred
  background-color: lighten(indianred, 75%)
